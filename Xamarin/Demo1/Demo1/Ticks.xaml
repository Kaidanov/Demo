<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Demo1.Ticks"
             Title="Ticks">
  <ScrollView>
        <StackLayout Padding="10">
            <Label Text="Ticks" FontSize="40" HorizontalTextAlignment="Center"/>
            <Label Text="{Binding Ticks}" FontSize="20" HorizontalTextAlignment="Center"/>
            <Button Text="{Binding ActionButtonText}" Command="{Binding ToggleCommand}"/>
            <Button Text="Reset" Command="{Binding ResetCommand}"/>
            
            <!--<Button Text="Start" Command="{Binding StartCommand}"/>
            <Button Text="Stop" Command="{Binding StopCommand}"/>-->
        </StackLayout>
    </ScrollView>
</ContentPage>